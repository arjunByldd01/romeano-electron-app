{
  "name": "electron-vite-project",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "postinstall": "sh ./postinstall"

  },
  "dependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@tanstack/react-query": "^5.29.0",
    "axios": "^1.6.8",
    "bindings": "^1.5.0",
    "clsx": "^2.1.0",
    "electron-store": "^8.2.0",
    "electron-traywindow-positioner": "^1.2.0",
    "electron-window-state": "^5.0.3",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "react-router-dom": "^6.23.0",
    "tailwind-merge": "^2.2.2",
    "@romeano/romeano-audio-library": "file:.."
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "classnames": "^2.3.2",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.romeano.macos",
    "directories": {
      "output": "out"
    },
    
    "mac": {
      "icon":"./public/assets/icons/romeano.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "extendInfo": {
        "LSApplicationCategoryType": "public.app-category.utilities",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      },
      "files": [
        "dist",
        "dist-electron",
        "node_modules/**/*",
        "package.json",
        "!node_modules/.cache",
        "!build"
      ],
      "extraFiles": [
        {
            "from": "./node_modules/@romeano/romeano-audio-library/romeano-package/out/Release/RomeanoAudioControl.framework",
            "to": "Frameworks/RomeanoAudioControl.framework"
        },
        {
            "from": "./node_modules/@romeano/romeano-audio-library/romeano-package/out/Release/RomeanoAudioDriver.driver",
            "to": "Library/Audio/Plug-Ins/HAL/RomeanoAudioDriver.driver"
        }
    ],
     
      "entitlements": "./entitlements.mac.plist",
      "hardenedRuntime": true
    },
    "dmg": {
      "sign": false
  }
  }
}
